# Django Settings
SECRET_KEY=your-super-secure-production-secret-key-at-least-50-characters-long
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,api.yourdomain.com
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com
DOCUMENTATION_URL=https://api.yourdomain.com/docs/

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Database Settings
DB_USER=your_prd_db_user
DB_PASSWORD=your_secure_prd_db_password
DB_HOST=your_production_db_host
DB_PORT=3306

# Specific database names
ACCOUNTS_DB_NAME=observer_accounts_prd
ACCOUNTS_DB_USER=your_prd_db_user
ACCOUNTS_DB_PASSWORD=your_secure_prd_db_password
ACCOUNTS_DB_HOST=your_production_db_host
ACCOUNTS_DB_PORT=3306

CLINICAL_DB_NAME=observer_clinical_prd
CLINICAL_DB_USER=your_prd_db_user
CLINICAL_DB_PASSWORD=your_secure_prd_db_password
CLINICAL_DB_HOST=your_production_db_host
CLINICAL_DB_PORT=3306

RESEARCH_DB_NAME=observer_research_prd
RESEARCH_DB_USER=your_prd_db_user
RESEARCH_DB_PASSWORD=your_secure_prd_db_password
RESEARCH_DB_HOST=your_production_db_host
RESEARCH_DB_PORT=3306

# Test databases (for production testing)
TEST_DEFAULT_DB=test_observer_default_prd
TEST_ACCOUNTS_DB=test_observer_accounts_prd
TEST_CLINICAL_DB=test_observer_clinical_prd
TEST_RESEARCH_DB=test_observer_research_prd

# Azure Storage (Production)
AZURE_STORAGE_ACCOUNT_NAME=your_prd_storage_account
AZURE_STORAGE_FILE_SYSTEM_NAME=your_prd_filesystem
AZURE_SAS_TOKEN=your_prd_sas_token

# Redis (optional for caching)
REDIS_URL=redis://your-redis-host:6379/0

# Logging
LOG_FILE=django_prd.log
ERROR_LOG_FILE=django_error.log